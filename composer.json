{
  "name": "microgears/webstone-requests",
  "type": "library",
  "description": "Set of tools that allows PHP-scripts to interact with external resources over the network",
  "keywords": [
    "microGears",
    "webstone-requests"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Maxim Kirichenko",
      "email": "kirichenko.maxim@gmail.com"
    }
  ],
  "require": {
    "php": "^8.0",
    "ext-pdo": "*",
    "ext-json": "*",
    "ext-curl": "*",
    "ext-mbstring": "*",
    "ext-simplexml": "*",
    "microgears/webstone-stdlib": "^1.0"
  },
  "autoload": {
    "psr-4": {"WebStone\\Requests\\": "src"}
  },
  "autoload-dev": {
    "psr-4": {"WebStone\\Requests\\Tests\\": "tests"}
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5"
  }
}
